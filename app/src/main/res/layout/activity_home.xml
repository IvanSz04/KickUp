<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azuladoverdoso">

    <Button
        android:id="@+id/btn_registrate"
        android:layout_width="157dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:text="@string/registrate"
        android:textColor="#B4B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pre_logout"
        app:strokeColor="@color/colortext"
        app:strokeWidth="3dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="151dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/adlam_display"
        android:text="@string/frase_1"
        android:textAlignment="center"
        android:textColor="#B4B3B3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_pre_logout"
        android:layout_width="176dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#000000"
        android:text="@string/iniciar_sesion"
        android:textColor="#B4B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="@color/colortext"
        app:strokeWidth="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>