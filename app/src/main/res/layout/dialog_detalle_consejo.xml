<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título agregado -->
        <TextView
            android:id="@+id/tvTituloDetalleConsejo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETALLE DEL CONSEJO"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Contenido original -->
        <TextView
            android:id="@+id/tvDetalleUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Usuario: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleDificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dificultad: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetallePosicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posición: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleObjetivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objetivos: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleCsj1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consejo 1: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleCsj2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consejo 2: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetalleCsj3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consejo 3: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:visibility="gone"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>