<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@color/azuladoverdoso">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="CREA TU CONSEJO"
            android:textAlignment="center"
            android:textColor="@color/colortext"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/inputTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TÃ­tulo del Consejo"/>

        <EditText
            android:id="@+id/inputDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dificultad (1-10)"/>

        <EditText
            android:id="@+id/inputPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Posicion" />

        <EditText
            android:id="@+id/inputGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Objetivo" />

        <EditText
            android:id="@+id/inputCsj1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Consejo 1"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/inputCsj2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Consejo 2 (Opcional)"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/inputCsj3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Consejo 3 (Opcional)"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnGuardarInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Informe"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>